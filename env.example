# Environment Variables for Mark's Reverie
NEXT_PUBLIC_SITE_NAME="Mark's Reverie"
NEXT_PUBLIC_SITE_DESCRIPTION="A personal blog for thoughts, reflections, and literary musings"

# Site URL (change for production)
# Development: http://localhost:3000
# Production: https://www.marksreverie.com
# Note: API endpoints will be automatically constructed as {SITE_URL}/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Blog Data Source Configuration
# Options: 'json', 'markdown', 'api', 'cms'
BLOG_DATA_SOURCE=markdown

# Optional: CMS Configuration (if using CMS data source)
# CMS_TYPE=contentful
# CMS_SPACE_ID=your_space_id
# CMS_ACCESS_TOKEN=your_access_token

# Optional: Search Configuration
# SEARCH_PROVIDER=client

# Optional: Comments Configuration
# COMMENTS_PROVIDER=disqus

# Optional: Social Media
# TWITTER_HANDLE=your_twitter
# GITHUB_HANDLE=your_github
# LINKEDIN_HANDLE=your_linkedin

# Email Configuration for Writing Challenge Submissions
# Use Gmail SMTP or any other email service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your.email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your.email@gmail.com
EMAIL_TO=markmagicwang@gmail.com